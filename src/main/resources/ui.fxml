<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane focusTraversable="true" prefHeight="500.0" prefWidth="800.0"
            style="-fx-background-radius: 10px 10px 0 0; -fx-border-radius: 10px 10px 0 0;"
            xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cc.zoyn.mogox.controller.MainUIController">
    <children>
        <AnchorPane fx:id="header" prefHeight="42.0" prefWidth="643.0"
                    style="-fx-background-radius: 10px 10px 0 0; -fx-border-radius: 10px 10px 0 0;">
            <children>
                <AnchorPane prefHeight="42.0" prefWidth="186.0"
                            style="-fx-background-color: #347ba4; -fx-border-radius: 10px 0 0 0; -fx-background-radius: 10px 0 0 0;">
                    <children>
                        <Label layoutX="32.0" layoutY="10.0" text="mogo X 启动器" textFill="WHITE">
                            <font>
                                <Font name="FangZhengZhunYuan" size="18.0"/>
                            </font>
                        </Label>
                    </children>
                </AnchorPane>
                <AnchorPane layoutX="186.0" prefHeight="42.0" prefWidth="616.0"
                            style="-fx-background-color: #3f8cbb; -fx-background-radius: 0 10px 0 0; -fx-border-radius: 0 10px 0 0;">
                    <children>
                        <GridPane alignment="CENTER" layoutX="556.0" layoutY="6.0" prefHeight="31.0" prefWidth="53.0">

                            <columnConstraints>
                                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" minWidth="10.0"
                                                   prefWidth="100.0"/>
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0"
                                                   prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Button fx:id="closeButton" mnemonicParsing="false" prefHeight="20.0" prefWidth="20.0"
                                        style="-fx-background-radius: 25px; -fx-border-radius: 25px; -fx-background-color: #ff6057;"
                                        textAlignment="CENTER" textOverrun="CLIP" GridPane.columnIndex="1">
                                    <font>
                                        <Font size="8.0"/>
                                    </font>
                                </Button>
                                <Button fx:id="minimizeButton" mnemonicParsing="false" prefHeight="20.0"
                                        prefWidth="20.0"
                                        style="-fx-background-radius: 25; -fx-border-radius: 25; -fx-background-color: #30c842;"
                                        textAlignment="CENTER" textFill="WHITE" textOverrun="CLIP">
                                    <font>
                                        <Font size="8.0"/>
                                    </font>
                                </Button>
                            </children>
                        </GridPane>
                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>
        <AnchorPane layoutY="42.0" prefHeight="465.0" prefWidth="186.0" style="-fx-background-color: #213735;">
            <children>
                <GridPane layoutX="13.0" layoutY="122.0" prefHeight="84.0" prefWidth="154.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="84.0" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="104.0" minHeight="10.0" prefHeight="44.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <JFXTextField fx:id="accountField" prefHeight="28.0" prefWidth="135.0" promptText="在此输入论坛邮箱"
                                      style="-fx-text-inner-color: #ffffff; -fx-prompt-text-fill: #a8a8a8;"
                                      unFocusColor="#a8a8a8"/>
                        <JFXPasswordField fx:id="passwordField" prefHeight="29.0" prefWidth="139.0"
                                          promptText="在此输入论坛密码"
                                          style="-fx-prompt-text-fill: #a8a8a8; -fx-text-inner-color: #ffffff;"
                                          unFocusColor="#a8a8a8" GridPane.rowIndex="1"/>
                    </children>
                </GridPane>
                <AnchorPane layoutY="84.0" prefHeight="31.0" prefWidth="186.0" style="-fx-background-color: #20272a;">
                    <children>
                        <Label layoutX="14.0" layoutY="6.0" prefHeight="15.0" prefWidth="31.0" text="登陆"
                               textFill="#8eb4e3">
                            <font>
                                <Font name="Microsoft YaHei Light" size="14.0"/>
                            </font>
                        </Label>
                    </children>
                </AnchorPane>
                <Label layoutX="75.0" layoutY="31.0" text="Hi~ Zoyn" textFill="WHITE">
                    <font>
                        <Font name="Calibri" size="17.0"/>
                    </font>
                </Label>
                <ImageView fitHeight="40.0" fitWidth="40.0" layoutX="26.0" layoutY="22.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@avatar.png"/>
                    </image>
                </ImageView>
                <JFXButton fx:id="registerButton" buttonType="RAISED" layoutX="20.0" layoutY="212.0"
                           mnemonicParsing="false" onMouseEntered="#onRegisterButtonMouseEnter"
                           onMouseExited="#onRegisterButtonMouseExit" ripplerFill="#66ccff" text="立即注册"
                           textFill="#a8a8a8"/>
                <JFXButton fx:id="forgePasswordButton" buttonType="RAISED" layoutX="92.0" layoutY="212.0"
                           mnemonicParsing="false" onMouseEntered="#onForgePasswordButtonMouseEnter"
                           onMouseExited="#onForgePasswordButtonMouseExit" text="忘记密码" textFill="#a8a8a8"/>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
