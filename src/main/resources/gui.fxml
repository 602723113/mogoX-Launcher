<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox focusTraversable="true" prefHeight="400.0" prefWidth="640.0" style="-fx-background-radius: 10px;"
      xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="cc.zoyn.mogox.controller.Controller">
    <AnchorPane fx:id="mainTitleBar" prefHeight="36.0" prefWidth="640.0"
                style="-fx-background-color: #DBDBDB; -fx-background-radius: 10px 10px 0 0; -fx-border-radius: 10px 10px 0 0;">
        <Button fx:id="closeButton" layoutX="6.0" layoutY="6.0" mnemonicParsing="false" onMouseClicked="#closeStage"
                prefHeight="17.0" prefWidth="17.0"
                style="-fx-background-radius: 25px; -fx-border-radius: 25px; -fx-background-color: #ff6057;"
                textAlignment="CENTER" textOverrun="CLIP">
            <font>
                <Font size="8.0"/>
            </font>
        </Button>
        <Button fx:id="minimizeButton" layoutX="30.0" layoutY="6.0" mnemonicParsing="false"
                onMouseClicked="#minimizeStage" prefHeight="17.0" prefWidth="17.0"
                style="-fx-background-radius: 25; -fx-border-radius: 25; -fx-background-color: #30c842;"
                textAlignment="CENTER" textFill="WHITE" textOverrun="CLIP">
            <font>
                <Font size="8.0"/>
            </font>
        </Button>
        <Label layoutX="266.0" layoutY="7.0" prefHeight="20.0" prefWidth="120.0" text="mogoX  启动器">
            <font>
                <Font name="Microsoft YaHei Light" size="15.0"/>
            </font>
        </Label>
        <ImageView fitHeight="20.0" fitWidth="20.0" layoutX="241.0" layoutY="7.0" pickOnBounds="true"
                   preserveRatio="true">
            <Image url="@logo.png"/>
        </ImageView>
        <Button fx:id="optionButton" alignment="CENTER" layoutX="556.0" layoutY="3.0" mnemonicParsing="false"
                onMouseClicked="#loadOptionStage" prefHeight="28.0" prefWidth="70.0" text="更多设置">
            <font>
                <Font name="Microsoft YaHei Light" size="13.0"/>
            </font>
        </Button>
    </AnchorPane>
    <AnchorPane prefHeight="256.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
        <Separator layoutX="9.0" layoutY="170.0" prefHeight="5.0" prefWidth="623.0"/>
        <ImageView fitHeight="80.0" fitWidth="80.0" layoutX="54.0" layoutY="49.0" pickOnBounds="true"
                   preserveRatio="true">
            <Image url="@logo.png"/>
        </ImageView>
        <Label fx:id="information" alignment="CENTER" layoutX="188.0" layoutY="60.0" prefHeight="58.0" prefWidth="249.0"
               text="你好" textAlignment="CENTER">
            <font>
                <Font name="Microsoft YaHei Light" size="32.0"/>
            </font>
        </Label>
        <GridPane layoutX="222.0" layoutY="187.0" prefHeight="90.0" prefWidth="197.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="94.0" minWidth="10.0" prefWidth="56.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="148.0" minWidth="10.0" prefWidth="141.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="账号:"/>
                <JFXTextField fx:id="accountField" promptText="在此输入你的论坛邮箱" GridPane.columnIndex="1">
                    <font>
                        <Font name="Microsoft YaHei Light" size="12.0"/>
                    </font>
                </JFXTextField>
                <Label text="密码:" GridPane.rowIndex="1"/>
                <JFXPasswordField fx:id="passwordField" promptText="在此输入你的论坛密码" GridPane.columnIndex="1"
                                  GridPane.rowIndex="1">
                    <font>
                        <Font name="Microsoft YaHei Light" size="12.0"/>
                    </font>
                </JFXPasswordField>
                <Label text="游戏版本:" GridPane.rowIndex="2"/>

                <ChoiceBox fx:id="versionChoice" prefHeight="23.0" prefWidth="144.0" GridPane.columnIndex="1"
                           GridPane.rowIndex="2"/>
            </children>
        </GridPane>
        <JFXButton fx:id="startButton" alignment="CENTER" buttonType="RAISED" layoutX="498.0" layoutY="262.0"
                   mnemonicParsing="false" onMouseClicked="#onStart" prefHeight="50.0" prefWidth="128.0"
                   ripplerFill="WHITE" style="-fx-background-color: #659865;" text="开始游戏" textFill="WHITE">
            <font>
                <Font name="Microsoft YaHei Light" size="18.0"/>
            </font>
        </JFXButton>
    </AnchorPane>
</VBox>
